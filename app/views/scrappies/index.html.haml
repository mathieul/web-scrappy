%h1 Listing scrappies

%table
  %tr
    %th Name
    %th Label
    %th Creator
    %th
    %th
    %th

  - @scrappies.each do |scrappy|
    %tr
      %td= scrappy.name
      %td= scrappy.label
      - if scrappy.creator.present?
        %td= scrappy.creator.email 
      - else
        %td Unknown?
      %td= link_to 'Show', scrappy
      %td
        - if can? :update, scrappy
          = link_to 'Edit', edit_scrappy_path(scrappy)
      %td
        - if can? :destroy, scrappy
          = link_to 'Destroy', scrappy, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New scrappy', new_scrappy_path
